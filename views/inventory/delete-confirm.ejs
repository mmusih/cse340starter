<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- display a message -->
<%- messages() %>

<!-- to display errors -->
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<!-- THE FORM -->
<p id="confirmDelete">Confirm Deletion - The delete is permanent!</p>
<br>
<form action="/inv/delete" method="post" >
  <label for="inv_make">Make:</label>
  <input
    type="text"
    id="inv_make"
    name="inv_make"
    required
    readonly
    value="<%= locals.inv_make %>"
  /><br />
  <label for="inv_make">Model:</label>
  <input
    type="text"
    id="inv_model"
    name="inv_model"
    required
    readonly
    value="<%= locals.inv_model %>"
  /><br />
  <label for="inv_year">Year:</label>
  <input
    type="number"
    id="inv_year"
    name="inv_year"
    required
    readonly
    value="<%= locals.inv_year %>"
  /><br />
  
  <label for="inv_price">Price:</label>
  <input
    type="number"
    id="inv_price"
    name="inv_price"
    required
    readonly
    value="<%= locals.inv_price %>"
  /><br />
  
  <input type="submit" name="submit" value="Delete Vehicle" />
  <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%=
  locals.inv_id %>" <% } %>>
</form>