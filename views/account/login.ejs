<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- display messages -->
<%- messages() %>

<!-- to display errors -->
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form action="/account/login" method="post">
  <label for="account_email">Email:</label><br />
  <input
    name="account_email"
    type="email"
    id="email"
    required
    placeholder="Enter your email address"
    value="<%= locals.account_email %>"
    placeholder="Enter a registered email address"
  /><br /><br />
  <label for="clientPassword">Password:</label><br />
  <input
    name="account_password"
    type="password"
    id="clientPassword"
    required
    placeholder="Enter your password"
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
  />
  <span id="spanpass"
    >Passwords must be at least 12 characters and contain at least 1 number, 1
    capital letter and 1 special character</span
  ><br /><br />
  <input type="submit" value="Sign in" />
</form>
<span id="spanregister"
  ><p>No account? :<a href="/account/register">Sign Up</a></p>
</span>
