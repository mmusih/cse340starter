<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- display messages -->
<%- messages() %>

<!-- to display errors -->
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<h2><%= greeting %></h2>
  <ul id="managementV">
    <% links.forEach(link => { %>
      <li><a href="<%= link.href %>"><%= link.text %></a></li>
    <% }); %>
  </ul>
